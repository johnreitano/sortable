<div class="text-md text-left mb-6"><%= link_to "Home", root_path, class: "text-blue-600 hover:underline" %> &#187; Customer </div>
<div class="border-1 md:mx-8">
  <div class="columns-2 flex items-center justify-between py-4">
    <div class="">
      <h4 class="text-2xl">Customers</h4>
    </div>
    <div class="text-right border">
      <%= link_to new_customer_path, class: 'bg-green-600 px-3 py-3 text-base text-white rounded-md hover:bg-green-700 hover:border-green-700 border-transparent border-solid cursor-pointer inline-block' do %>
        Add New Customer
      <% end %>
    </div>
  </div>
  <div class="py-4">
    <% @customers.order(:name).each do |customer| %>
      <div class="card card-body mb-4 border-b">
        <%= link_to customer.name, edit_customer_path(customer), class: "text-blue-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
